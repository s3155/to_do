<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="list-form">
        <%= form_for @list, html: { class: "form" } do |form| %>
          <div class="form-group">
            <%= form.label :tOdo, class: "label" %>
            <%= form.text_field :name, class: "form-control text-field" %>
          </div>

          <div class="form-group">
            <%= form.submit "追加", class: "btn btn-primary submit-button" %>
          </div>
        <% end %>
        <%= link_to 'リスト一覧', lists_path, class: "btn btn-secondary list-link" %>
      </div>
    </div>
  </div>
</div>

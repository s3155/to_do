<div class="container">
  <h1>ToDoリスト</h1>
  <div class="list-group">
    <% @lists.each do |list| %>
      <div style="line-height: 3;">
        <div class="list-group-item">
          <h5 class="mb-1"><%= link_to list.name, list_path(list) %></h5>
          <div class="d-flex justify-content-center"> <%= link_to '編集', edit_list_path(list), class: "btn btn-primary btn-sm" %>
            <%= form_tag list_path(list), method: :delete, data: { turbo_method: :delete, turbo_confirm: "このリストを削除してもよろしいですか？" } do %>
              <%= submit_tag "削除", class: "btn btn-danger btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="clearfix mt-3">
    <%= link_to 'ToDoリスト追加', new_list_path, class: "btn btn-yellow btn-sm mr-2" %>
  </div>
</div>

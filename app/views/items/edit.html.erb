<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center">編集する</h1>
      <%= form_with(model: [@list, @item], local: true) do |form| %>
        <div class="form-group">
          <%= form.label :詳細 %>
          <%= form.text_field :name, class: "form-control text-center" %>
        </div>
        <!-- Descriptionフォームを削除 -->
        <div class="text-center">
          <%= form.submit "保存", class: "btn btn-primary" %>
         
          
        </div>
      <% end %>
    </div>
  </div>
</div>
